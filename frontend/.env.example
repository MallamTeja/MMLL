# Frontend Environment Variables
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_VERSION=1.0.0
REACT_APP_NAME="MMLL Frontend"

# Build Configuration
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false

# Development
REACT_APP_DEBUG=true

# API Endpoints
REACT_APP_AUTH_ENDPOINT=/api/v1/auth
REACT_APP_MODELS_ENDPOINT=/api/v1/models
REACT_APP_PREDICTIONS_ENDPOINT=/api/v1/predictions
REACT_APP_MACHINES_ENDPOINT=/api/v1/machines

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760  # 10MB

# Analytics (optional)
# REACT_APP_GOOGLE_ANALYTICS_ID=
# REACT_APP_SENTRY_DSN=

# Feature Flags
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# Production overrides
# REACT_APP_API_BASE_URL=https://your-api-domain.com
# GENERATE_SOURCEMAP=false